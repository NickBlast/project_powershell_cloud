# EditorConfig helps maintain consistent coding styles between editors and IDEs
root = true

[*
# Charset and basic normalization
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation defaults
indent_style = space
indent_size = 2
]

[*.ps1, *.psm1, *.psd1]
# PowerShell files prefer 4 spaces and allow longer lines
indent_size = 4
max_line_length = 140

[*.md]
# Markdown often requires trailing whitespace for line breaks
trim_trailing_whitespace = false
