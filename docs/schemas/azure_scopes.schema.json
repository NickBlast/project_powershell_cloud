{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "azure_scopes",
  "version": "1.0.0",
  "type": "object",
  "description": "Records representing Azure management groups, subscriptions, and resource groups.",
  "primaryKey": ["Id"],
  "properties": {
    "Type": { "type": "string", "description": "Scope type: ManagementGroup, Subscription, ResourceGroup" },
    "Id": { "type": "string", "description": "Full resource identifier or subscription id" },
    "Name": { "type": "string" },
    "ParentId": { "type": ["string", "null"], "description": "Parent management group or subscription id" },
    "State": { "type": ["string", "null"], "description": "Subscription state when applicable" },
    "Location": { "type": ["string", "null"], "description": "Resource group location when applicable" }
  },
  "required": [ "Type", "Id", "Name" ]
}
