{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "entra_apps",
  "version": "1.0.0",
  "type": "object",
  "description": "Application objects from Microsoft Graph (Get-MgApplication). Complex or nested properties are serialized when exported.",
  "primaryKey": ["Id"],
  "properties": {
    "Id": { "type": "string" },
    "AppId": { "type": "string", "description": "Client/application id" },
    "DisplayName": { "type": "string" },
    "SignInAudience": { "type": ["string", "null"] }
  },
  "required": [ "Id", "AppId", "DisplayName" ]
}
