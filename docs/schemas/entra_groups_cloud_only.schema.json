{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "entra_groups_cloud_only",
  "version": "1.0.0",
  "type": "object",
  "description": "Cloud-only group objects from Microsoft Graph (Get-MgGroup) filtered where onPremisesSyncEnabled is null or false.",
  "primaryKey": ["Id"],
  "properties": {
    "Id": { "type": "string" },
    "DisplayName": { "type": "string" },
    "Mail": { "type": ["string", "null"] },
    "MailEnabled": { "type": ["boolean", "null"] },
    "SecurityEnabled": { "type": ["boolean", "null"] },
    "OnPremisesSyncEnabled": { "type": ["boolean", "null"] }
  },
  "required": [ "Id", "DisplayName" ]
}
